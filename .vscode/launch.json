    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Unit test",
            "module": "unittest",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "env":{
                "LANG": "en_US.UTF-8",
            },
            "args": [
                "tests.balance_sheet_test.BalanceSheetTest.test_roe"
            ]
        }
    ]
}